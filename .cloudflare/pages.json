{
  "build": {
    "command": "npm install && npm run build",
    "output_directory": "out"
  },
  "headers": {
    "/*": {
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "Referrer-Policy": "strict-origin-when-cross-origin"
    }
  },
  "routes": {
    "include": ["/*"],
    "exclude": [
      "/_next/*",
      "/api/*",
      "/_next/static/*",
      "/favicon.ico",
      "/robots.txt",
      "/*.ico",
      "/*.png",
      "/*.svg",
      "/*.jpg",
      "/*.jpeg",
      "/*.gif",
      "/*.webp",
      "/*.css",
      "/*.js",
      "/*.json",
      "/*.woff",
      "/*.woff2",
      "/*.ttf",
      "/*.otf"
    ]
  }
} 